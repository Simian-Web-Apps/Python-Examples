{
    "components": [
        {
            "label": "Columns",
            "columns": [
                {
                    "components": [
                        {
                            "label": "Input PDFs",
                            "tableView": false,
                            "storage": "base64",
                            "webcam": false,
                            "fileTypes": [
                                {
                                    "label": "",
                                    "value": ""
                                }
                            ],
                            "filePattern": "application/pdf",
                            "multiple": true,
                            "clearOnHide": false,
                            "validate": {
                                "required": true
                            },
                            "key": "inputPdFs",
                            "properties": {
                                "triggerHappy": "file_selection_change"
                            },
                            "type": "file",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                },
                {
                    "components": [
                        {
                            "label": "Merged PDF",
                            "tableView": false,
                            "clearOnHide": false,
                            "key": "createdPdf",
                            "type": "customresultfile",
                            "input": true
                        }
                    ],
                    "width": 6,
                    "offset": 0,
                    "push": 0,
                    "pull": 0,
                    "size": "md",
                    "currentWidth": 6
                }
            ],
            "key": "columns",
            "type": "columns",
            "input": false,
            "tableView": false
        },
        {
            "label": "Merge files",
            "showValidations": true,
            "disableOnInvalid": true,
            "tableView": false,
            "key": "hello",
            "type": "button",
            "event": "MergeFiles",
            "action": "event",
            "input": true
        },
        {
            "label": "Merge settings",
            "disableAddingRemovingRows": true,
            "reorder": true,
            "addAnotherPosition": "bottom",
            "layoutFixed": false,
            "enableRowGroups": false,
            "initEmpty": true,
            "tableView": false,
            "clearOnHide": false,
            "key": "pdfSettings",
            "customConditional": "show = data?.inputPdFs.length > 0",
            "type": "datagrid",
            "input": true,
            "components": [
                {
                    "label": "PDF name",
                    "applyMaskOn": "change",
                    "disabled": true,
                    "tableView": true,
                    "key": "pdfName",
                    "type": "textfield",
                    "input": true
                },
                {
                    "label": "First page",
                    "applyMaskOn": "change",
                    "mask": false,
                    "tableView": false,
                    "defaultValue": 1,
                    "delimiter": false,
                    "requireDecimal": false,
                    "inputFormat": "plain",
                    "truncateMultipleSpaces": false,
                    "validate": {
                        "custom": "console.log(row); valid = ((input >= 1) && (input <= row.lastPage)) ? true : 'Invalid page selection.'"
                    },
                    "key": "firstPage",
                    "type": "number",
                    "input": true
                },
                {
                    "label": "Last page",
                    "applyMaskOn": "change",
                    "mask": false,
                    "tableView": false,
                    "delimiter": false,
                    "requireDecimal": false,
                    "inputFormat": "plain",
                    "truncateMultipleSpaces": false,
                    "customDefaultValue": "value = row.numberPages;",
                    "validate": {
                        "custom": "console.log(row); valid = (input >= row.firstPage) && (input <= row.numberPages) ? true : 'Invalid page selection.'"
                    },
                    "key": "lastPage",
                    "type": "number",
                    "input": true
                },
                {
                    "label": "Total",
                    "applyMaskOn": "change",
                    "mask": false,
                    "disabled": true,
                    "tableView": false,
                    "delimiter": false,
                    "requireDecimal": false,
                    "inputFormat": "plain",
                    "truncateMultipleSpaces": false,
                    "clearOnHide": false,
                    "key": "numberPages",
                    "type": "number",
                    "input": true
                },
                {
                    "label": "fullName",
                    "applyMaskOn": "change",
                    "hidden": true,
                    "hideLabel": true,
                    "tableView": true,
                    "key": "fullName",
                    "type": "textfield",
                    "input": true
                }
            ]
        }
    ]
}